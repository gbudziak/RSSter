@model Models.RSS.Channel

<div class="ui two column centered grid">
    
    <div class="column">
        <div class="ui card">
            <div class="content">
                <div class="header">@Model.Title</div>
                <div class="meta">
                    <img src="@Model.ImageUrl" alt="image should be here!" />
                </div>
                <div class="description">
                    <p>@Model.Description</p>
                    <p>
                        <a href="@Model.Url" target="_blank">Link</a>
                    </p>
                    <p>@Html.ActionLink("Unsubscibe", "Delete", new { channelId = @Model.Id })</p>
                </div>
            </div>
            <div class="extra content">
                <a class="ui teal ribbon label">Cats</a> @Model.Readers
                <a class="ui teal ribbon label">Posts</a> 10
                <a class="ui teal ribbon label">Frequency</a> 2 posts/day
                <a class="ui teal ribbon label">Last post</a> 1h 20mins ago
            </div>
        </div>
    </div>
    <div class="column">
        <div class="ui vertical labeled icon buttons">
            <div class="ui button">
                <i class="pause icon"></i>
                Pause
            </div>
            <div class="ui button">
                <i class="play icon"></i>
                Play
            </div>
            <div class="ui button">
                <i class="shuffle icon"></i>
                Shuffle
            </div>
        </div>
    </div>
</div>
