@model Models.RSS.Channel

<div>
    <div class="ui card">
        <div class="content">
            <div class="header">@Model.Title</div>
            <div class="meta"><img src="@Model.ImageUrl" alt="image should be here!" /></div>
            <div class="description">
                @Model.Description
            </div>
        </div>
        <div class="extra content">
            <i class="unhide icon"></i>
            @Model.Readers
            <i class='unlock icon'></i>@Html.ActionLink("Unsubscibe", "Delete", new { channelId = @Model.Id })
        </div>
    </div>
</div>
