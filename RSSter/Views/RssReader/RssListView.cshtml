@model List<Models.RSS.UserItem>

@{
ViewBag.Title = "RssReader";
Layout = "~/Views/Shared/_Layout_RSSreader.cshtml";
}


<table class="ui celled striped table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Link
            </th>

            <th>
                Publish Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="collapsing">
                    <a href="@item.Item.Url" target="_blank">@item.Item.Title</a>
                </td>
                <td>@Html.Raw(item.Item.Description)</td>
                <td class="right aligned collapsing"><a href="@item.Item.Url" target="_blank">More</a></td>
                <td>@item.Item.PublishDate</td>
            </tr>
        }
    </tbody>
</table>

