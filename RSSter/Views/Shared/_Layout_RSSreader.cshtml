@using Microsoft.AspNet.Identity
@using Models.RSS


<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Site Properities -->
    <title>Feed Example - Semantic</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/semantic")
    <link rel="stylesheet" type="text/css" href="~/Content/semantic.css">


    <script src="~/Scripts/semantic.js"></script>

    <link rel="stylesheet" type="text/css" href="~/Content/feed.css">
    <script src="~/Scripts/feed.js"></script>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/semantic")
</head>

<body id="feed">
<div class="main nav">
    <div class="ui inverted main menu">
        <div class="container">
            <div class="left menu">
                <div class="title item">
                    <b>RSSter</b>
                </div>
                <a href="/about" class="launch item">About</a>
                <a href="/contact" class="launch item">Contact</a>
            </div>

            <div class="right menu ">
                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right"}))
                {
                    @Html.AntiForgeryToken()

                    <div class="title item">

                        @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new {title = "Manage"})
                    </div>

                    <div class="ui dropdown item">
                        <i class="remove icon"></i>
                        <div class="menu">

                            <a class="item" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<div class="ui celled grid">
    <div class="three wide middle column" style="
    padding-right: 0;
    padding-left: 0;
    padding-left: 0;
    padding-left: 0;
    ">


@{ Html.RenderAction("ShowUserChannels", "RssReader"); }
        

</div>

    <div class="thirteen wide right column">
        @RenderBody()
    </div>
</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/semantic")
    @Scripts.Render("~/bundles/menu")
@RenderSection("scripts", required: false)
</body>
</html>
