@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    <!-- Site Properities -->
    <title>Feed Example - Semantic</title>

    <link rel="stylesheet" type="text/css" href="~/Content/semantic.css">
    <script src="~/Scripts/semantic.js"></script>
</head>

<body id="feed">
    <div class="main nav">
        <div class="ui inverted main menu">
            <div class="container">
                <div class="left menu">
                    <div class="title item">
                        <i class="dribbble icon"></i><b>RSSter</b>
</div>
                    <div class="title item">
                                <i class="plus icon"></i>@Html.ActionLink("Search & Add", "Index", "Search")
                    </div>
                    <div class="title item">
                                <i class="refresh icon"></i>@Html.ActionLink("Refresh Channels", "RefreshAllUserChannels", "RssReader")
                    </div>

                </div>

                <div class="right menu ">
                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="title item">

                            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </div>


                                <a class="item" href="javascript:document.getElementById('logoutForm').submit()">Log Off!</a>


                    }


                </div>
            </div>
        </div>
    </div>
    <div class="ui internally celled grid">
        <div class="three wide middle column" style="
            padding-right: 0;
            padding-left: 0;
            padding-top: 0;
            padding-bottom: 0;">


            @{ Html.RenderAction("ShowUserChannels", "RssReader"); }


        </div>

        <div class="thirteen wide right column">
            @RenderBody()
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/semantic")
    @Scripts.Render("~/bundles/css")
    @*@Styles.Render("~/Content/css")*@
    @Styles.Render("~/Content/semantic")

    @RenderSection("scripts", required: false)
    @RenderSection("style", required: false)
</body>
</html>
