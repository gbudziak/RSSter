@using Models.RSS


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/semantic")

</head>
<body>
<div class="main nav">
    <div class="ui inverted main menu">
        <div class="container">
            <div class="left menu">
                <div class="title item">
                    <b>RSSter</b>
                </div>
                <a href="/about" class="launch item">About</a>
                <a href="/contact" class="launch item">Contact</a>
            </div>

            <div class="right menu">
                <a href="/about" class="launch item">Info</a>
                <a href="/contact" class="launch item">info 2</a>
            </div>
        </div>
    </div>
</div>

<div class="main container">
    <div class="ui grid">
        <div class="three wide column">
            <div class="ui segment">
                @Html.Partial("_LoginPartial")
                <p>@Html.ActionLink("My RSS Channels", "ChannelList", "RssReader")</p>
                <p>@Html.ActionLink("Add new RSS", "AddRssChannel", "RssReader")</p>
                @{ Html.RenderAction("Channels", "RssReader"); }

            </div>
        </div>
        <div class="thirteen wide column">
            @RenderBody()
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/semantic")
@RenderSection("scripts", required: false)
</body>
</html>


